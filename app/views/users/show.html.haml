.wrapper-index
  = render "shared/header"

  .note-creater
    .note-creater__content
      .note-creater__content__avatar
        - if @user.thumbnail.present?
          = image_tag @user.thumbnail
          -# = image_tag "default_author.png"
        - else
          = image_tag "default_author.png"
      .note-creater__content__detail
        %ul
          %li.note-creater__content__detail__name
            = @user.nickname
          - if @user.id == current_user.id
            = link_to edit_user_path(current_user) do
              %li.note-creater__content__detail__configure-btn
                設定

        .note-creater__content__detail__profile
          = @user.profile
        .note-creater__content__detail__otherList
          %ul
            %li.follow
              50 フォロー
            %li.follower
              7329 フォロワー
            %li.snsList
              %i.fa.fa-facebook-square.fa-fw
              %i.fa.fa-twitter.fa-fw
    .note-creater__customNav
      .note-creater__customNav__inner
        %ul
          %li
            ホーム
          %li
            マガジン
        .note-creater__customNav__inner__search
          %i.fa.fa-search.fa-fw

  = render @notes
  .btn-more
    .btn-more__text
      %p
        もっとみる
  = render "shared/footer"
=render "shared/modal_purchase"
