.comments
  .comments__inner
    .comments__inner__header
      %p
        コメント#{reviews.length}件
    - reviews.each do |review|
      = render "reviews/each_comment", review: review

    .comments__inner__posted-comments
      .comments__inner__posted-comments__body
        %ul.user-comment
          %li.user-comment__thumbnail
            = image_tag current_user.thumbnail, class:"user-comment__thumbnail__image"
          %li.user-comment__info
            %ul
              %li
                = form_for [@note, @review], url: note_reviews_path(note), remote: true do |f|
                  .user-comment__info__user-name
                    = f.text_field :review, id: "review-body", placeholder: "コメントする"
                    = f.submit id: "review-submit"
