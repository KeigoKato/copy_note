.wrapper-sign-up-in
  .sign-up-in__header
    = link_to root_path do
      note
  .register-container
    .register-container__title
      %p
        ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
      .field
        = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
      - if devise_mapping.rememberable?
        .field.remember-me
          = f.check_box :remember_me
          = f.label :remember_me, "ニックネームとパスワードを記憶"
      .actions
        %button
          ログイン
          = f.submit "Log in", class: "registration-btn"
    .login-btn
      = render "devise/shared/links"
  = render "shared/footer"
